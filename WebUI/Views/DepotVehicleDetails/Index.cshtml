@model IEnumerable<WebUI.Models.DepotVehicleDetail>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Depot vehicle List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="DepotVehicleDetails" asp-action="Create" class="btn btn-primary">
                Create New Depot Vehicle
            </a>

        </div>
    </div>
</div>
<br />
@if (TempData["AlertMessage"] != null)
{
    <div class="alert-success">
        <strong>Success</strong> @TempData["AlertMessage"]
    </div>
}
<center>
    @using (Html.BeginForm("Index", "DepotVehicleDetails", FormMethod.Get))
    {<div class="col-6">

            <span> Enter Waiting for Load value </span> <input type="text" name="search" placeholder="True if waiting else false" />
            <button type="submit" name="submit" value="Submit">Search </button>
        </div>
    }
</center>
<br/>
@if (Model.Count() > 0)
{
    <table class="table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>WaitingForLoad</th>
                <th>Depot</th>
                <th>CreatedBy </th>
                <th> CreatedOn</th>
                <th>UpdatedBy </th>
                <th> UpdatedOn</th>
                <th>VehicleId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.WaitingForLoad</td>
                    <td>@obj.Depot</td>
                    <td>@obj.CreatedBy </td>
                    <td>@obj.CreatedOn </td>
                    <td>@obj.UpdatedBy </td>
                    <td>@obj.UpdatedOn </td>
                    <td>@obj.VehicleId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@obj.Id">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@obj.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@obj.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no depot vehicle details to display</p>
}