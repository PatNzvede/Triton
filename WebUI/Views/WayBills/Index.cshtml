@model IEnumerable<WebUI.Models.WayBill>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">WayBill List </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="WayBills" asp-action="Create" class="btn btn-primary">
                Create New WayBill
            </a>
        </div>
    </div>
</div>

<br />
<center>
    @using (Html.BeginForm("Index", "WayBills", FormMethod.Get))
    {
        <span> Enter Waybill status </span> <input type="text" name="search" placeholder="Enter waybill status" />
        <button type="submit" name="submit" value="Submit">Search </button>
    }
</center>
<br/>
@if (Model.Count() > 0)
{
    <table class="table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Waybillno</th>
                <th>Status</th>
                <th>Weight</th>
                <th> Destination </th>
                <th>
                    LoadingFrom
                </th>
                <th>CreatedBy </th>
                <th> CreatedOn</th>
                <th>VehicleId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Waybillno</td>
                    <td>@obj.Status</td>
                    <td>@obj.Weight</td>
                    <td>@obj.Destination</td>
                    <td>@obj.LoadingFrom </td>
                    <td>@obj.CreatedBy </td>
                    <td>@obj.CreatedOn </td>
                    <td>@obj.VehicleId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@obj.Id">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@obj.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@obj.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>    
}
else
{
    <p>There are no waybills to display</p>
}